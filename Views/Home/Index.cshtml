@model HomeViewModel
@{
    ViewBag.Title = "Home";
    Layout = "_HomeLayout";
}

<div class="container">
    
    <div id="carouselExample"  class="carousel slide col-12 col-lg-8 mx-auto" data-bs-ride="carousel" >
        <div class="carousel-inner">
            @for (int i = 0; i < Model.SlideShow.Photos.Count(); i++)
            {
                <div class="carousel-item @(i == 0 ? "active" :  "")" style="max-height: 80vh" >
                    <img class="d-block img-fluid" src="@Model.SlideShow.Photos.ToList()[i].Path">
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
             
    <div class="justify-content-between d-flex mt-4" >
        <h4>Top selling products</h4>
        <a class="btn btn-light btn-outline-dark" asp-controller="Product" asp-action="Products">View All</a>
    </div>
    <div class="container-fluid py-2" style="overflow: auto;">
    
        <div class="d-flex flex-row flex-nowrap" >
            @foreach(Product product in Model.Products)
            {
                <div class="card m-2" style="min-width: 300px;">
                    <div class="card-body d-flex flex-column">
                        <img src="@product.Photos.FirstOrDefault().Path" class="card-img-top" style="width:250px;"/>
                        <div class="mt-auto">
                            <h5 class="card-title">@product.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@product.Price.ToString("C")</h6>
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="btn btn-link" asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId">Edit</a>
                                <a class="btn btn-link" asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId">Delete</a>
                            }
                            else
                            {
                                <a href="#" class="btn btn-success text-white btn-outline-dark">Add to cart</a>
                                
                            }  

                        </div>
                    </div>
                </div>
                
            }
        </div>
    </div> 

