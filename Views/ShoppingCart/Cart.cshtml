@model Cart
@{
    ViewBag.Title = "Shopping cart";
    decimal grandTotal = 0;
    if(Model != null)
    {
        grandTotal = Model.TotalPrice + Model.ShippingPrice;
        
    }
}
<h2 class="text-center mt-4">Shopping Cart</h2>
 @if(Model != null){
    
    @foreach(CartItem cartItem in Model.CartItems)
    {
        <div class="card mb-3 col-12 col-md-8 mx-auto">
            <div class="d-flex">
                <div class="col-4 col-lg-3">
                    <img src="\@cartItem.Product.Photos.First().Path" style="width : 200px" class="img-fluid img-thumbnail rounded-start " >
                </div>
                <div class="card-body">
                    <div class="d-flex">
                        <h5 class="card-title">@cartItem.Product.Name</h5>
                        <a href="#" class="ms-auto">Remove</a>
                    </div>
                    <p class="card-text">@cartItem.Product.Description.</p>
                    <p class="card-text"><strong class="text-primary">Price : R @cartItem.Product.Price</strong></p>
                    <p class="card-text text-muted">Quantity : @cartItem.Quantity</p>
                        
                </div>
            </div>
        </div>
 
    }
    <div class="col-12 col-md-8 mx-auto">
        <table class="table">
            <tr>
                <td><p>Total quantity</p></td>
                <td>@Model.TotalQuantity</td>
            </tr>
            <tr>
                <td><p>Shipping cost</p></td>
                <td class="text-primary fw-bold">R @Model.ShippingPrice</td>
            </tr>
            <tr>
                <td><p>Total price</p></td>
                <td class="text-primary fw-bold">R @Model.TotalPrice</td>
            </tr>
            <tr>
                <td><h3>Grand total</h3></td>
                <td class="text-primary fw-bold"><h3>R @grandTotal</h3></td>
            </tr>
        </table>

    </div>
    
 }else{
     <h2 class="text-center">No items in your shopping cart</h2>
    <p class="text-center"><i class="fa-solid fa-cart-shopping fa-shake fa-10x"></i></p>
 }
